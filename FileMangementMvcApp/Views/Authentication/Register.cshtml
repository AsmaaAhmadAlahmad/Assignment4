@model RegisterModel
@{
    ViewData["Title"] = "Register page";
    Layout = "_Layout";
}


<link href="~/css/loginstyle.css" rel="stylesheet" />

 

<h2 class="heading-section">Register page</h2>
<div class="login-form">
    <form asp-action="Register" asp-controller="Authentication" method="post">
        <div asp-validation-summary="All" class="text-danger">
        </div>

        <div class="form-group text-center " style="margin-right: 70px">
            <label class="text-center text-danger fs-5 ml-2"> @ViewBag.NotificationAlreayExists</label>
        </div>
            <i class="fa-solid fa-circle-user "></i>
        <div class="form-group">
            <input type="text"
                   class="form-control rounded-left " asp-for="@Model.UserName"
                   name="UserName" placeholder="User name" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>

            <div class="form-group">
               <input type="password"
                      class="form-control rounded-left  "
                      name="Password"
                      placeholder="Password" asp-for="@Model.Password"/>
               <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

        <div class="form-group">
            <input type="password"
                   class="form-control rounded-left "
                   name="ConfirmPassword"
                   placeholder="Confirm password" asp-for="@Model.ConfirmPassword" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>


        <div class="form-group">
            <button type="submit"
                    class="btn btn-primary rounded" style="margin-top:-15px;"
                    name="submit">
                Register
            </button>
        </div>



         
    </form>

</div>


